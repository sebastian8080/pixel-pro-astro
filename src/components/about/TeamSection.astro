---
// src/components/home/OurTeamSection.astro
// Podrías tener un archivo de datos para el equipo, similar a services.ts
// Por ahora, usaremos datos directamente en el componente para el ejemplo.
const teamMembers = [
  {
    role: 'Desarrollador Web',
    description: 'Especialista en construir plataformas web robustas y funcionales, adaptadas a las necesidades de tu negocio.',
    imageUrl: '/assets/img/desarrollador-de-software.png' // Asegúrate de tener estas imágenes
  },
  {
    role: 'Experto en Google Ads',
    description: 'Profesional certificado en Google Ads, creando y optimizando campañas para maximizar tu ROI.',
    imageUrl: '/assets/img/experto-en-google-ads.png'
  },
  {
    role: 'Diseñador Gráfico',
    description: 'Creativo con visión, especializado en identidades visuales que comunican la esencia de tu marca.',
    imageUrl: '/assets/img/diseñador-grafico.png'
  },
];
---

<section class="py-12 md:py-20 bg-white">
    <div class="container mx-auto px-4 md:px-8 text-center">
        <p class="text-blue-700 font-semibold uppercase text-sm mb-2">PIXEL PRO</p>
        <h2 class="text-4xl md:text-5xl font-bold text-gray-800 mb-6 leading-tight">
            Nuestro <span class="text-blue-700">Equipo</span>
        </h2>
        <p class="text-lg md:text-xl text-gray-600 leading-relaxed max-w-3xl mx-auto mb-12">
            Cada miembro de nuestro equipo aporta su experiencia, talento y visión para construir soluciones que realmente marcan la diferencia. Nos gusta trabajar en conjunto, aprender constantemente y mantenernos siempre un paso adelante en un mundo digital en constante cambio.
        </p>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {teamMembers.map(member => (
                <div class="p-6 bg-white rounded-lg shadow-md flex flex-col items-center text-center">
                    <div class="mb-4 w-32 h-32 flex items-center justify-center">
                        <img src={member.imageUrl} alt={member.role} class="max-w-full h-auto" loading="lazy" />
                    </div>
                    <h3 class="text-xl font-semibold text-gray-800 mb-2">{member.role}</h3>
                    </div>
            ))}
        </div>
    </div>
</section>