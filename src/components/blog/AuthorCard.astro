---
// components/blog/AuthorCard.astro
interface Props {
  name?: string;
  bio?: string;
  avatar?: string;
  role?: string;
}

const {
  name = "Sebastian Armijos",
  bio = "Desarrollador Web apasionado por crear experiencias digitales excepcionales y compartir conocimientos sobre tecnolog√≠a moderna.",
  avatar = "/assets/img/perfil-sebastian-armijos.webp",
  role = "Desarrollador de Software",
} = Astro.props;
---

<aside
  class="bg-gradient-to-br from-blue-50 to-indigo-50 rounded-xl shadow-sm p-6 md:p-8 border border-blue-100 mt-8"
  itemscope
  itemtype="https://schema.org/Person"
>
  <div class="flex items-center gap-2 mb-6">
    <svg class="w-6 h-6 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
      <path d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"></path>
    </svg>
    <h2 class="text-2xl font-bold text-gray-900">Sobre el Autor</h2>
  </div>

  <div class="flex flex-col sm:flex-row gap-6 items-center sm:items-start">
    <div class="flex-shrink-0">
      <img
        src={avatar}
        alt={`Foto de ${name}`}
        class="w-28 h-28 rounded-full object-cover border-4 border-white shadow-lg"
        itemprop="image"
        loading="lazy"
      />
    </div>

    <div class="flex-1 text-center sm:text-left">
      <h3 class="text-2xl font-bold text-gray-900 mb-2" itemprop="name">
        {name}
      </h3>

      <p class="text-blue-600 font-medium mb-3" itemprop="jobTitle">
        {role}
      </p>

      <p class="text-gray-700 leading-relaxed" itemprop="description">
        {bio}
      </p>
    </div>
  </div>
</aside>
