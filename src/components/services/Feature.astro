---
interface Props {
    icon: string;
    title: string;
    description: string;
}

const { icon, title, description } = Astro.props;
---

<div class="bg-white p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300 transform hover:-translate-y-1">
    <div class="text-blue-700 mb-4">
        <i class={`${icon} text-4xl`}></i>
    </div>
    <h3 class="text-xl font-semibold mb-2 text-gray-800">{title}</h3>
    <p class="text-gray-600">{description}</p>
</div>