---
// src/pages/blog.astro
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('posts');
const sortedPosts = posts.sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);
---

<Layout title="Blog">
  <section class="mt-32 px-4 mb-20">
    <div class="text-center mb-12">
      <h1 class="text-5xl font-bold text-blue-700 mb-4">Nuestro Blog</h1>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Mantente atento a nuestras publicaciones para aprender y optimizar tu estrategia digital.
      </p>
    </div>

    <div class="max-w-7xl mx-auto grid gap-8 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
      {sortedPosts.map(post => (
        <a href={`/blog/${post.slug}/`} class="group block bg-white rounded-xl shadow-md hover:shadow-lg transition-all duration-200 border border-gray-200 overflow-hidden">
          <div class="p-6">
            <img class="mb-6 rounded-lg" src={post.data.image} alt={post.data.title}>
            <h2 class="text-2xl font-bold text-blue-700 group-hover:underline mb-2">{post.data.title}</h2>
            <p class="text-sm text-gray-500 mb-3">{new Date(post.data.date).toLocaleDateString()}</p>
            <p class="text-gray-700 line-clamp-3">{post.data.description}</p>
          </div>
        </a>
      ))}
    </div>
  </section>
</Layout>
